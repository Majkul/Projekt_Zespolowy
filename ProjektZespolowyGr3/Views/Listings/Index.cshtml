@model IEnumerable<ProjektZespolowyGr3.Models.ViewModels.BrowseListingsViewModel>

@{
    ViewData["Title"] = "Listings";
}

<h1>Listings</h1>

@foreach (var browseListing in Model)
{
    <hr />
    <a href="@Url.Action("Details", "Listings", new { id = browseListing.ListingId })" style="text-decoration:none; color:inherit;">
        <div style="display:flex; cursor:pointer;">
            <div style="width:150px; height:150px;">
                <img src="@browseListing.PhotoUrl" alt="Photo" style="max-width:100%; max-height:100%;" />
            </div>

            <div style="flex:1; display:flex; flex-direction:column; justify-content:space-between;">
                <h3>@browseListing.Listing.Title</h3>
                <p>@browseListing.Listing.Description</p>
                <small>@browseListing.Seller?.Username</small>
                <small>@browseListing.ReviewCount rating@(browseListing.ReviewCount != 1 ? "s" : ""), @browseListing.AverageRating.ToString("0.00") average</small>
                <strong>@browseListing.Listing.Price</strong>
            </div>
        </div>
    </a>
}
<hr />