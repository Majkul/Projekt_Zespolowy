@model List<ProjektZespolowyGr3.Models.DbModels.User>

<h2 class="mb-4">Users</h2>

@if (ViewBag.SelectedTab == "Users")
{
    <form asp-action="Index" method="get" class="form-inline d-flex justify-content-between align-items-center mb-4 w-100">
        <input type="hidden" name="tab" value="Users" />

        <div class="d-flex align-items-center flex-wrap gap-2 flex-grow-1">
            <input type="text"
                   name="searchString"
                   class="form-control"
                   placeholder="Search user..."
                   value="@ViewBag.CurrentFilter"
                   style="min-width: 250px;" />

            <button type="submit" class="btn btn-primary">Search</button>

            <label for="pageSize" class="mb-0 ms-3 me-2 small text-muted">Show limit:</label>
            <select id="pageSize"
                    name="pageSize"
                    class="form-select form-select-sm"
                    style="width: 80px;"
                    onchange="this.form.submit()">
                @{
                    int currentPageSize = ViewBag.CurrentPageSize ?? 25;
                    int[] sizes = new[] { 25, 50, 100, 500, 1000 };
                }
                @foreach (var size in sizes)
                {
                    if (size == currentPageSize)
                    {
                        <option value="@size" selected="selected">@size</option>
                    }
                    else
                    {
                        <option value="@size">@size</option>
                    }
                }
            </select>
        </div>
    </form>
}

<table class="table table-striped table-bordered table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Is Banned</th>
            <th scope="col">Created at</th>
            <th scope="col" style="width: 140px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Username</td>
                <td>@item.Email</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.PhoneNumber</td>
                <td>@item.IsBanned</td>
                <td>@item.CreatedAt</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                    <form asp-action="DeleteUser" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
